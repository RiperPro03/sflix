{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen bg-gray-100">
        <form method="post" class="p-8 bg-white rounded shadow-md" style="width: 300px;">
            {% if error %}
                <div class="p-4 mb-4 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Logout</a>
                </div>
            {% endif %}
            <h1 class="mb-6 text-lg font-bold text-center">Please sign in</h1>
            <div class="mb-4">
                <label for="inputUsername" class="block mb-2 text-sm font-bold text-gray-700">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="username" required autofocus>
            </div>
            <div class="mb-6">
                <label for="inputPassword" class="block mb-2 text-sm font-bold text-gray-700">Password</label>
                <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}

