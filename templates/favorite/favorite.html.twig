{% extends 'base.html.twig' %}

{% block title %}Mes Series{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/styleHome.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">SFLIX</a>
            <div class="d-flex align-items-center">
                {% if app.user %}
                    <div class="nav-item">
                        <a class="btn btn-outline-primary" href="{{ path('app_suggestion') }}">Suggestion</a>
                    </div>
                    <div class="nav-item">
                        <a class="btn btn-outline-primary" href="{{ path('app_home') }}">Catalogue</a>
                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.userIdentifier }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('admin') }}">Administration</a></li>
                            {% endif %}
                            <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Se Déconnecter</a></li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <div class="row">
            {% if likedSeries is empty %}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                       Vous n'avez mis aucune serie en favoris.
                       <a href="{{ path('app_home') }}">Cliquez ici</a> pour acceder au catalogue 
                    </div>
                </div>
            {% else %}
            <h2>Vos Séries Favorite <small>({{ likedSeries|length }})</small></h2>
                {% for serie_title in likedSeries %}
                    {% set image_filename = serie_title ~ '.jpg' %}
                    {% set isLiked = likedSeries[serie_title] ?? false %}
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="image-container position-relative">
                                <img src="{{ asset('img-series/' ~ image_filename) }}" class="card-img-top" alt="{{ serie_title }}">
                                {% if app.user %}
                                    <button class="overlay position-absolute w-100 h-100 d-flex justify-content-center align-items-center like-button" data-title="{{ serie_title | e('js') }}" data-liked="{{ isLiked ? 'true' : 'false' }}">
                                        <img src="{{ asset(isLiked ? 'img-icons/heart-fill.svg' : 'img-icons/heart.svg') }}" alt="Like" class="heart-icon">
                                    </button>
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-uppercase">{{ serie_title }}</h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

{% endblock %}

