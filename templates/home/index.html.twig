{% extends 'base.html.twig' %}


 {% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/styleHome.css') }}" rel="stylesheet" />
{% endblock %}

{% block title %}Sflix{% endblock %}

{% block body %}
    

    <header>
        <a href="{{path('app_home') }}">SFLIX</a>
        <div class="left-side">
            {% if app.user %}
                <div class="menu">
                    <a href="">Mes Series</a>
                    <a href="">Une autre page</a>
                    <a href="">Une Troisieme</a>
                </div>
                <div class="logged-in">
                    <a>{{ app.user.userIdentifier }}</a>
                    <div class="deconnecter">
                        <a href="{{path('app_logout') }}">Se Deconnecter</a>
                    </div>
                </div>
            {% else %}
                <div class="button-connect">
                    <a href="{{path('app_login') }}">Se Connecter</a>
                </div>
            {% endif %}
        </div>
    </header>

    <h2>Notre Catalogue </h2>
    <div class="search">
                <input type="text" placeholder="Rechercher">
                <button>üîç</button>
    </div>

    <main>
        {% for serie_title in series %}
            {% set image_filename = serie_title ~ '.jpg' %}
            <div class="poster">
                <div class='image-poster'>
                    <img src="{{ asset('img-series/' ~ image_filename) }}" alt="{{ serie_title }}">
                </div>
                
                    {% if app.user %}
                        <div class="hover-serie"> 
                            <p>{{ serie_title |upper }}</p>
                        </div> 
                    {% else %}
                        <div class="coeur">
                            <img src="{{asset('img-icons/heart.svg') }}">
                            <p>{{ serie_title |upper }}</p>
                        </div>
                    {% endif %}
            </div>
        {% endfor %}
    </main>

{% endblock %}

