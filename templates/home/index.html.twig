{% extends 'base.html.twig' %}

{% block title %}Sflix{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #111;
            color: white;
            margin: 0;
        }

        header {
            background-color: #333;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        main {
            max-width: 1000px;
            margin: 50px auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .poster {
            max-width: 100%;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        }

        .search {
            display: flex;
            align-items: center;
        }

        .search input {
            padding: 5px;
            border: none;
            border-radius: 4px;
        }
    </style>

    <header>
        <h1>Sflix</h1>
        <div class="search">
            <input type="text" placeholder="Notre Catalogue">
            <button>üîç</button>
        </div>
        <button>Se Connecter</button>
    </header>

    <main>
        {% for serie_title in series %}
            {% set image_filename = serie_title ~ '.jpg' %}
            <img src="{{ asset('img-series/' ~ image_filename) }}" alt="{{ serie_title }}" class="poster">
        {% endfor %}
    </main>

{% endblock %}

